openai:
  api_key: "your-openai-api-key-here"  # Get from https://platform.openai.com/
  model: "gpt-4o-mini"                 # Options: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
  temperature: 0.8                      # 0.0-1.0 (lower = consistent, higher = creative)
  max_tokens: 150                       # Maximum response length

users:
  - nickname: "Friend Name"             # Exact WeChat contact name
    enabled: true
  # Add more users below:
  # - nickname: "Another Friend"
  #   enabled: true

log_file: "message_logs.txt"
history_log_file: "chat_history.txt"

# Number of historical messages to send to GPT for context
# Higher = better context, but more expensive API calls
history_context_length: 20
